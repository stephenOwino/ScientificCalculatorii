<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvin"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="#fff"
            android:textAlignment="viewEnd"
            android:padding="10dp"
            android:maxLines="1"
            android:gravity="bottom"
            android:background="#000"
            android:text="">

    </TextView>

    <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvout"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="50sp"
            android:textColor="#fff"
            android:textAlignment="viewEnd"
            android:padding="10dp"
            android:maxLines="1"
            android:gravity="bottom"
            android:background="#000"
            android:text="">

    </TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="7">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="7"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:orientation="horizontal">

                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bac"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text="AC"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bc"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text="C"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bb1"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text=")"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bb2"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text="("
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="5"
                        android:orientation="horizontal">

                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bsin"
                            android:textSize="20sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text="sin"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bcos"
                            android:textSize="20sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:textAllCaps="false"
                            android:text="cos"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/btan"
                            android:textSize="20sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:textAllCaps="false"
                            android:text="tan"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/blog"
                            android:textSize="20sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:textAllCaps="false"
                            android:text="log"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bin"
                            android:textSize="20sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:textAllCaps="false"
                            android:text="In"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="5"
                        android:orientation="horizontal">

                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bfact"
                            android:textSize="22sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:textAllCaps="false"
                            android:text="×!"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bsquare"
                            android:textSize="22sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:textAllCaps="false"
                            android:text="x2"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bsqrt"
                            android:textSize="22sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:textAllCaps="false"
                            android:text="√"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/binv"
                            android:textSize="22sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:textAllCaps="false"
                            android:text="1/×"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bdiv"
                            android:textSize="22sp"
                            android:textAllCaps="false"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text="÷"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:orientation="horizontal">

                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/b7"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="7"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/b8"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="8"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/b9"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="9"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bmul"
                            android:textSize="30sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text="×"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:orientation="horizontal">

                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/b4"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="4"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/b5"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="5"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/b6"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="6"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bminus"
                            android:textSize="30sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text="−"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:orientation="horizontal">

                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/b1"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="1"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/b2"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="2"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/b3"
                            android:textSize="28sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="3"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bplus"
                            android:textSize="30sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text="+"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:orientation="horizontal">

                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bpi"
                            android:textSize="30sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="π"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bzero"
                            android:textSize="30sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="0"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bdot"
                            android:textSize="30sp"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="."
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                    <Button
                            android:layout_width="match_parent"
                            android:id="@+id/bequal"
                            android:textSize="30sp"
                            android:background="#000"
                            android:textColor="#E6FF00"
                            android:text="="
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>